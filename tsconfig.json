{
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist/",
    "rootDir": "./",
    "module": "esnext",
    "target": "es2015",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  }
}
